<Window x:Class="GestionEmpleados2023.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEmpleados2023"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Fila para el título -->
            <RowDefinition Height="*"/>
            <!-- Fila para los botones -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Departamento RRHH" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>

        <!-- Botones en una fila horizontal -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Lista de empleados" Width="150" Height="70" Margin="50 0" Click="btn_ListaEmpleados"/>
            <Button Content="Agregar empleados" Width="150" Margin="50 0" Click="btn_AgregarEmpleados"/>
            <Button Content="Buscar Empleado" Width="150" Margin="50 0"/>
        </StackPanel>
    </Grid>
</Window>
